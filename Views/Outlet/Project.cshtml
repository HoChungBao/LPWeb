@using LienPhatERP.Services
@inject ICommonService CommonService
@inject ICustomerService CustomerService
@{
    ViewData["Title"] = "Project";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-content" id="app">

    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Quản lý dự án
                    </h3>

                </div>
            </div>
            <div class="m-portlet__head-tools">
                <div class="d-md-none m--margin-bottom-15"></div>
                <a href="/Outlet/CreateProject" class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                    <span>
                        <i class="fa fa-folder"></i>
                        <span>
                            Nhập dự án
                        </span>
                    </span>
                </a>
                <div class="m-separator--dashed d-xl-none m--margin-10"></div>
            </div>
        </div>
        <div class="m-portlet__body">
            <!--begin: Search Form -->
            <div class="m-form m-form--label-align-right m--margin-bottom-5">
                <div class="row align-items-center">
                    <div class="col-xl-12 ">
                        <div class="form-group row align-items-center">                         
                            <div class="col-md-3">
                                <div class="m-form__group m-form__group--inline">
                                    <div class="m-form__label">
                                        <label>
                                            Loại dự án:
                                        </label>
                                    </div>
                                    <div class="m-form__control" style="width: 70%">
                                        <select class="form-control " id="m_form_project">
                                            <option value="">Tất cả</option>
                                            <option value="audit">Audit</option>
                                            <option value="khaosat">Khảo sát</option>
                                            <option value="nghiemthu">Nghiệm thu</option>
                                            <option value="Sanxuat">Sản xuất</option>
                                            <option value="Posm">POSM</option>
                                            <option value="thicong">Thi công</option>
                                            <option value="thuevitri">Thuê vị trí</option>
                                            <option value="baohanhbaotri">Bảo hành/ bảo trì</option>
                                            <option value="thaodo">Tháo dỡ</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="d-md-none m--margin-bottom-5"></div>
                            </div>
                            <div class="col-md-2">
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Search..." id="generalSearch">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span>
                                            <i class="la la-search"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="d-md-none m--margin-bottom-10"></div>
                    </div>

                </div>
            </div>
            <!--end: Search Form -->
            <!--begin: Datatable -->
            <div class="m_datatable" id="scrolling_vertical"></div>

            <!--end: Datatable -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/project.js"></script>
}














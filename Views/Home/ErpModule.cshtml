<style>
    .m-portlet .m-portlet__body.m-card {
        text-decoration: none;
    }
    .m-card {
        min-height: 200px;
        display: flex;
        position: relative;
        /* justify-content: center; */
        align-items: center;
        overflow: hidden;
    }
      
    .m-card--1 {
        background: linear-gradient(-33deg, #34e89e, #73c1e0);
    }
    .m-card--2 {
        background: linear-gradient(to right, #d1913c, #ffd194);
    }
    .m-card--3 {
        background: linear-gradient(to left, #185a9d, #43cea2);
    }
    .m-card--4 {
        background: linear-gradient(to left, #b6fbff, #83a4d4);
    }
    .m-card--5 {
        background: linear-gradient(to left, #ff6b6b, #f4516c);
    }

    .m-card__icon {
        position: absolute;
        font-size: 180px;
        right: -15%;
        color: white;
        opacity: 0.5;
    }
    .m-card__name {
        font-size: 30px;
        max-width: 70%;
        color: white;
        font-weight: 600;
    }
    .m-card:hover .m-card__name {
        text-decoration: none;
    }
</style>


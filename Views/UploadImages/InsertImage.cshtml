                    //            images = respone.data;
                    //        }
                    //    }
                    //    swal("Upload Hình Ảnh Thành Công!!");
                    //},
                    //error: function () {
                    //    swal("Upload Hình Ảnh Thất Bại!!");

                    //}
                });
            });
        });
    </script>
}

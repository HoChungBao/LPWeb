@functions{
    List<UploadFileApiResult> convertFile(string f)
    {
        if (!string.IsNullOrEmpty(f))
        {
            return LienPhatERP.Helper.JsonHelper.DeserializeObject<List<UploadFileApiResult>>(f);

        }
        return new List<UploadFileApiResult>();
    }
}

@using Microsoft.AspNetCore.Authorization
@{
    ViewData["Title"] = "AirContent";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@inject  IAuthorizationService AuthorizationService
<div class="m-content" id="app">

    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Quản lý Air Content

                    </h3>

                </div>
            </div>
            <div class="m-portlet__head-tools">
                <div class="d-md-none m--margin-bottom-15"></div>
                @if ((await AuthorizationService.AuthorizeAsync(User, "RequireInputData")).Succeeded)
                {
                    <a href="/Common/CreateAirContent" class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                        <span>
                            <i class="fa fa-users"></i>
                            <span>
                                Nhập AirContent
                            </span>
                        </span>
                    </a>
                }
                <div class="d-md-none m--margin-bottom-10"></div>


                <a href="/Common/DataSearchContentRealtime" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                    <span>
                        <i class="fa fa-search"></i>
                        <span>
                            Tra cứu
                        </span>
                    </span>
                </a>
            </div>
        </div>
        <div class="m-portlet__body">
            <!--begin: Search Form -->
            <div class="m-form m-form--label-align-right m--margin-bottom-5">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="form-group m-form__group row align-items-center">
                            <div class="col-md-4">
                                <div class="m-form__group m-form__group--inline">
                                    <div class="m-form__label">
                                        <label>
                                            Loại nội dung:
                                        </label>
                                    </div>
                                    <div class="m-form__control" style="width: 70%">
                                        <select class="form-control m-bootstrap-select m-bootstrap-select--solid" id="m_form_type">
                                            <option value="">All</option>
                                            <option value="NOIDUNGBV">Nội dụng bệnh viện</option>
                                            <option value="QUANGCAO">Quảng cáo</option>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="m-form__group m-form__group--inline">
                                    <div class="m-form__label">
                                        <label class="m-label m-label--single">
                                            Thời lượng:
                                        </label>
                                    </div>
                                    <div class="m-form__control" style="width: 75%">
                                        <select class="form-control m-bootstrap-select "id="m_form_123">
                                            <option value="">All</option>
                                            <option value="5">5 giây</option>
                                            <option value="10">10 giây</option>
                                            <option value="15">15 giây</option>
                                            <option value="30">30 giây</option>
                                            <option value="60">60 giây</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="d-md-none m--margin-bottom-5"></div>
                            </div>
                            <div class="col-md-4">
                                <div class="m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--solid" placeholder="Search..." id="generalSearch">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span>
                                             <i class="la la-search"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-xl-3 order-2 order-xl-1 m--align-right">
         
                            <a href="/Common/CreateAirContent" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                <span>
                                    <i class="fa fa-users"></i>
                                    <span>
                                       Nhập AirContent
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
 
                     
                            <a href="/Common/CreateAirContent" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                <span>
                                    <i class="fa fa-search"></i>
                                    <span>
                                        Tra cứu
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                      
                    </div>*@
                    
                </div>
            </div>
            <!--end: Search Form -->
            <!--begin: Datatable -->
            <div class="m_datatable" id="scrolling_vertical"></div>

            <!--end: Datatable -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/aircontent.js"></script>
}





